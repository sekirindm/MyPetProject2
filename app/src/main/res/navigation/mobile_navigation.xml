<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mypetproject2.features.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_titleFragment"
            app:destination="@id/titleFragment"
            app:popUpTo="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.mypetproject2.features.ui.games.stress.GamesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_games" >
        <action
            android:id="@+id/action_navigation_dashboard_to_gameFinishedFragment"
            app:destination="@id/gameFinishedFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.mypetproject2.features.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/gameFinishedFragment"
        android:name="com.example.mypetproject2.features.ui.games.stress.GameFinishedFragment"
        android:label="fragment_game_finished"
        tools:layout="@layout/fragment_game_finished" >
        <argument
            android:name="score"
            app:argType="integer" />
        <argument
            android:name="percentage"
            app:argType="float" />
        <argument
            android:name="answers"
            app:argType="boolean[]" />
        <argument
            android:name="uswerAnswerHistory"
            app:argType="string[]" />
        <argument
            android:name="gameType"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.mypetproject2.features.ui.games.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
        <action
            android:id="@+id/action_titleFragment_to_spellingNNFragment"
            app:destination="@id/spellingNNFragment" />
        <argument
            android:name="descriptions"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="gameNumber"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/spellingNNFragment"
        android:name="com.example.mypetproject2.features.ui.games.spelling.SpellingNNFragment"
        android:label="fragment_spelling_n_n"
        tools:layout="@layout/fragment_spelling_n_n" >
        <action
            android:id="@+id/action_spellingNNFragment_to_gameFinishedFragment"
            app:destination="@id/gameFinishedFragment" />
    </fragment>
</navigation>